<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.anarki.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_information"
        android:name="com.dicoding.anarki.ui.information.InformationFragment"
        android:label="@string/title_information"
        tools:layout="@layout/fragment_information" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.dicoding.anarki.ui.setting.SettingFragment"
        android:label="@string/title_setting" />
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.dicoding.anarki.ui.recent.RecentFragment"
        android:label="RecentFragment"
        tools:layout="@layout/fragment_recent"/>

</navigation>